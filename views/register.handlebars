{{> nav/nav-block user=false register=true}}


<section class="section">
    <div class="columns mt-6">


      <div class="column is-4">
          <figure class="image is-1by1">
              <img src="/assets/images/avatar-1.jpg">
          </figure>
          <div class="buttons is-centered">
              <button class="button is-info is-small mt-4" type="submit" id="avatar">Generate new avatar</button> 
          </div>
      </div>

      <div class="column is-8">
          <form id="create-form">
              
              <div class="field is-horizontal">
                  <div class="field-body">

                      <div class="field">
                          <label class="label" for="inputFirst">Name</label>
                          <div class="control">
                              <input class="input" type="text" id="inputFirst" placeholder="John">
                          </div>
                      </div>

                      <div class="field">
                          <label class="label" for="inputLocation">Location</label>
                          <div class="control">
                              <input class="input" type="text" id="inputLocation" placeholder="Wilmington">
                          </div>
                      </div>

                  </div>
              </div>

              <div class="field is-horizontal">
                  <div class="field-body">

                      <div class="field">
                          <label class="label" for="inputEmail">Email</label>
                          <div class="control">
                              <input class="input" type="email" id="inputEmail" placeholder="Email">
                          </div>
                      </div>

                      <div class="field">
                          <label class="label" for="inputPassword">Password</label>
                          <div class="control">
                              <input class="input" type="password" id="inputPassword" placeholder="Password">
                          </div>
                      </div>

                  </div>
              </div>

              <div class="field is horizontal">
                  <label class="label">Choose an example activity that you like to do with friends</label>
                  <div class="field-body">
                      <div class="field is-narrow">
                          <div class="control">
                              <div class="select is-fullwidth">
                                  <select>
                                      <option>Workout</option>
                                      <option>Hiking</option>
                                      <option>Book club</option>
                                      <option>Eat and drink</option>
                                      <option>Gaming</option>
                                      <option>Beach</option>
                                      <option>Movies</option>
                                      <option>Live music</option>
                                  </select>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>

              <div class="field is horizontal">
                  <label class="label">Where do you want to meet friends?</label>
                  <div class="field-body">
                      <div class="field is-narrow">
                          <div class="control">
                              <label class="radio"><input type="radio" name="location"> Locally</label>
                              <label class="radio"><input type="radio" name="location"> Virtually</label>
                          </div>
                      </div>
                  </div>
              </div>

              <div class="field is-horizontal">
                  <div class="field-body">
                      <div class="field">
                          <label class="label">About</label>
                          <div class="control">
                              <textarea class="textarea" type="text" placeholder="Tell your future friends a little bit about yourself"></textarea>
                          </div>
                      </div>
                  </div>
              </div>

              <div class="field is-horizontal">
                  <div class="field-body">
                      <div class="field is-narrow">
                          <div class="control">
                              <button class="button is-primary mt-3 px-6" type="submit" id="add-user">Register</button> 
                          </div>
                      </div>
                  </div>
              </div>

          </form>
      </div>



    </div>

</section>