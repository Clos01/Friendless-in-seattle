{{> nav/nav-block user=true register=false}}

<section class="section">
    <div class="columns mt-6">

        <div class="column is-4">
            <figure class="image is-1by1">
                <img src="https://api.multiavatar.com/{{userInfo.firstName}}.png?apikey=bkuYzM3faIrP8O">
            </figure>
            <p class="has-text-centered is-size-6 m-4">{{userInfo.firstName}}</p>
        </div>

        <div class="column is-8">
            <form id="user-form">
                
                <div class="field is-horizontal">
                    <div class="field-body">

                        <div class="field">
                            <label class="label" for="inputFirst">Name</label>
                            <div class="control">
                                <input class="input" type="text" id="inputFirst" value="{{userInfo.firstName}}" placeholder="John">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="inputLocation">Location</label>
                            <div class="control">
                                <input class="input" type="text" id="inputLocation" value="{{userInfo.location}}" placeholder="Wilmington">
                            </div>
                        </div>

                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-body">

                        <div class="field">
                            <label class="label" for="inputEmail">Email</label>
                            <div class="control">
                                <input class="input" type="text" id="inputEmail" value="{{userInfo.email}}">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="inputPassword">Password</label>
                            <div class="control">
                                <input class="input" type="password" id="inputPassword" value="{{userInfo.password}}">
                            </div>
                        </div>

                    </div>
                </div>

                <div class="field is horizontal">
                    <label class="label">Choose an example activity that you like to do with friends</label>
                    <div class="field-body">
                        <div class="field is-narrow">
                            <div class="control">
                                <div class="select is-fullwidth">
                                    <select id="interest_id">
                                    {{#each interests as |interest|}}
                                      <option value={{interest.id}}>{{interest.interest_name}}</option>
                                    {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is horizontal">
                    <label class="label">Where do you want to meet friends?</label>
                    <div class="field-body">
                        <div class="field is-narrow">
                            <div class="control">
                                <label class="radio"><input type="radio" name="meetPreference" value="locally"> Locally</label>
                              <label class="radio"><input type="radio" name="meetPreference" value="virtually"> Virtually</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-body">
                        <div class="field">
                            <label class="label">About</label>
                            <div class="control">
                                <textarea id="inputAbout" class="textarea" type="text" placeholder="Tell your future friends a little bit about yourself">{{userInfo.about}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-body">
                        <div class="field is-grouped">
                            <div class="control">
                                <button class="button is-info" type="submit" id="update-user" data-id="{{userInfo.id}}">Update</button> 
                            </div>
                           {{#if userInfo.isAdmin}}
                            <div class="control">
                                <button class="button is-info" type="submit" id="delete-user">Delete</button>
                            </div>
                            {{/if}}
                            <div class="control">
                                <button class="button is-info" type="submit" id="view-user" data-id="{{userInfo.id}}">Refresh</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</section>

<div class="modal" id="delete-user-modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Confirm Delete</p>
        </header>
        <section class="modal-card-body">
            <p class="mb-2">Re-Enter Credent to Delete User</p>
            <div class="control">
                <input class="input mb-2" type="text" id="userEmail" placeholder="Email">
            </div>
            <div class="control">
                <input class="input" type="password" id="userPassword" placeholder="Password">
            </div>
        </section>
        <footer class="modal-card-foot">
            <button class="button is-danger" id="confirm-delete" type="button" data-id="{{userInfo.id}}">Confirm Delete</button>
            <button class="button is-info" type="button" data-dismiss="modal">Nah, I'll Stay</button>
        </footer>
    </div>
</div>
