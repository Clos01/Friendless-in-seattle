{{> nav/nav-block user=true register=false}}

<section class="section">
    <div class="columns mt-6">

        <div class="column is-4">
            <figure class="image is-1by1">
                <img src="/assets/images/avatar-1.jpg">
            </figure>
            <p class="has-text-centered is-size-6 m-4">Generate new avatar</p>
        </div>

        <div class="column is-8">
            <form id="user-form">
                
                <div class="field is-horizontal">
                    <div class="field-body">

                        <div class="field">
                            <label class="label" for="inputFirst">Name</label>
                            <div class="control">
                                <input class="input" type="text" id="inputFirst" value="{{userInfo.firstName}}" placeholder="John">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="inputLocation">Location</label>
                            <div class="control">
                                <input class="input" type="text" id="inputLocation" value="{{userInfo.Location}}" placeholder="Wilmington">
                            </div>
                        </div>

                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-body">

                        <div class="field">
                            <label class="label" for="inputEmail">Email</label>
                            <div class="control">
                                <input class="input" type="text" id="inputEmail" value="{{userInfo.email}}">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="inputPassword">Location</label>
                            <div class="control">
                                <input class="input" type="password" id="inputPassword" value="{{userInfo.password}}">
                            </div>
                        </div>

                    </div>
                </div>

                <div class="field is horizontal">
                    <label class="label">Choose an example activity that you like to do with friends</label>
                    <div class="field-body">
                        <div class="field is-narrow">
                            <div class="control">
                                <div class="select is-fullwidth">
                                    <select>
                                        <option>Workout</option>
                                        <option>Hiking</option>
                                        <option>Book club</option>
                                        <option>Eat and drink</option>
                                        <option>Gaming</option>
                                        <option>Beach</option>
                                        <option>Movies</option>
                                        <option>Live music</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is horizontal">
                    <label class="label">Where do you want to meet friends?</label>
                    <div class="field-body">
                        <div class="field is-narrow">
                            <div class="control">
                                <label class="radio"><input type="radio" name="location"> Locally</label>
                                <label class="radio"><input type="radio" name="location"> Virtually</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-body">
                        <div class="field">
                            <label class="label">About</label>
                            <div class="control">
                                <textarea class="textarea" type="text" placeholder="Tell your future friends a little bit about yourself"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-body">
                        <div class="field is-grouped">
                            <div class="control">
                                <button class="button is-info" type="submit" id="update-user" data-id="{{userInfo.id}}">Update</button> 
                                {{#unless userInfo.isAdmin}}
                            </div>
                            <div class="control">
                                <button class="button is-info" type="submit" id="delete-user">Delete</button>
                                {{/unless}}
                            </div>
                            <div class="control">
                                <button class="button is-info" type="submit" id="view-user" data-id="{{userInfo.id}}">Refresh</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>



    </div>

</section>



