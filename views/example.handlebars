<section class="section">
        <div class="field">
            <div class="control">
              <textarea class="textarea is-info" id="example-text" class="form-control" placeholder="Post something new..."></textarea>

            </div>
        </div>
        <div class="field">
            <div class="control">
                <button id="submit" class="button is-info is-light">Post</button>
            </div>
        </div>
</section>

<hr class="m-6 has-background-grey-lighter">

<h4 class="has-text-info has-text-centered is-size-1">Chat</h4>
        <section class="section">
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item textarea is-info is-light">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="button is-danger is-rounded delete"></button>
          </li>
          <br>
          {{/each}}
        </ul>
</section>

